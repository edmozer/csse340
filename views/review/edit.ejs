<h1><%= title %></h1>

<p>Review written on: <%= review_date %></p>

<form action="/review/update" method="post" class="review-form">
  <input type="hidden" name="review_id" value="<%= review_id %>">
  
  <label for="review_text">Edit your review for <%= vehicleName %>:</label>
  <textarea 
    name="review_text" 
    id="review_text" 
    rows="6" 
    required 
    minlength="10" 
    maxlength="1000"
  ><%= review_text %></textarea>
  
  <div class="form-actions">
    <button type="submit" class="btn-submit">Update Review</button>
    <a href="/account/" class="btn-cancel">Cancel</a>
  </div>
</form>
