<h1><%= title %></h1>

<% if (notice && notice.length) { %>
  <div class="notice" role="status">
    <p><%= notice[0] %></p>
  </div>
<% } %>

<% if (errors && errors.length) { %>
  <div class="form-errors" role="alert">
    <p>Please fix the following:</p>
    <ul>
      <% errors.forEach((e) => { %>
        <li><%= e.msg %></li>
      <% }) %>
    </ul>
  </div>
<% } %>

<form class="form-card" action="/inv/add-classification" method="post">
  <p class="form-help">Classification name cannot contain spaces or special characters.</p>

  <label for="classification_name">Classification Name</label>
  <input
    type="text"
    id="classification_name"
    name="classification_name"
    required
    maxlength="50"
    pattern="^[A-Za-z0-9]+$"
    title="Use only letters and numbers. No spaces or special characters."
    value="<%= classification_name || '' %>"
  >

  <button type="submit" class="btn">Add Classification</button>
</form>
