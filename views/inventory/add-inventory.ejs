<h1><%= title %></h1>

<% if (notice && notice.length) { %>
  <div class="notice" role="status">
    <p><%= notice[0] %></p>
  </div>
<% } %>

<% if (errors && errors.length) { %>
  <div class="form-errors" role="alert">
    <p>Please fix the following:</p>
    <ul>
      <% errors.forEach((e) => { %>
        <li><%= e.msg %></li>
      <% }) %>
    </ul>
  </div>
<% } %>

<form class="form-card" action="/inv/add-inventory" method="post">
  <label for="inv_make">Make</label>
  <input
    type="text"
    id="inv_make"
    name="inv_make"
    required
    maxlength="100"
    pattern="^[A-Za-z0-9\s\-']+$"
    title="Use letters/numbers; spaces and hyphens are allowed."
    value="<%= inv_make || '' %>"
  >

  <label for="inv_model">Model</label>
  <input
    type="text"
    id="inv_model"
    name="inv_model"
    required
    maxlength="100"
    pattern="^[A-Za-z0-9\s\-']+$"
    title="Use letters/numbers; spaces and hyphens are allowed."
    value="<%= inv_model || '' %>"
  >

  <label for="inv_year">Year</label>
  <input
    type="number"
    id="inv_year"
    name="inv_year"
    required
    min="1886"
    max="2099"
    step="1"
    value="<%= inv_year || '' %>"
  >

  <label for="classificationList">Classification</label>
  <%- classificationList %>

  <label for="inv_description">Description</label>
  <textarea
    id="inv_description"
    name="inv_description"
    required
    rows="6"
  ><%= inv_description || '' %></textarea>

  <label for="inv_image">Image Path</label>
  <input
    type="text"
    id="inv_image"
    name="inv_image"
    required
    pattern="^/images/[A-Za-z0-9/_\-]+\.(png|jpg|jpeg|gif)$"
    title="Use a /images/... file path (png, jpg, jpeg, gif)."
    value="<%= inv_image || '' %>"
  >

  <label for="inv_thumbnail">Thumbnail Path</label>
  <input
    type="text"
    id="inv_thumbnail"
    name="inv_thumbnail"
    required
    pattern="^/images/[A-Za-z0-9/_\-]+\.(png|jpg|jpeg|gif)$"
    title="Use a /images/... file path (png, jpg, jpeg, gif)."
    value="<%= inv_thumbnail || '' %>"
  >

  <label for="inv_price">Price</label>
  <input
    type="number"
    id="inv_price"
    name="inv_price"
    required
    min="0"
    step="0.01"
    value="<%= inv_price || '' %>"
  >

  <label for="inv_miles">Miles</label>
  <input
    type="number"
    id="inv_miles"
    name="inv_miles"
    required
    min="0"
    step="1"
    value="<%= inv_miles || '' %>"
  >

  <label for="inv_color">Color</label>
  <input
    type="text"
    id="inv_color"
    name="inv_color"
    required
    maxlength="50"
    value="<%= inv_color || '' %>"
  >

  <button type="submit" class="btn">Add Inventory Item</button>
</form>
